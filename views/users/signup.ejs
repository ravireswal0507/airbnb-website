<%layout("/layout/boilerplate")%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Worldwideplace</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="md-3">
        <label for="username" class="form-label">Username</label>
        <input
          id="title"
          name="username"
          itemid="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div> 
      </div>

      <div class="md-3">
        <label for="email" class="form-label">Email</label>
        <input
          id="email"
          name="email"
          itemid="email"
          type="email"
          class="form-control"
          required
        />
       
      </div>

      <div class="md-3">
        <label for="password" class="form-label">password</label>
        <input
          id="password"
          name="password"
          itemid="password"
          type="password"
          class="form-control"
          required
        />
       
      </div><br><br>
      <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>
